# GitHub Authentication - Use either Personal Access Token OR GitHub App credentials

# Option 1: Personal Access Token (recommended for getting started)
GITHUB_TOKEN=your_github_personal_access_token_here

# Option 2: GitHub App (for production use)
# GITHUB_APP_ID=your_app_id
# GITHUB_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
# GITHUB_INSTALLATION_ID=your_installation_id

# Server Configuration
LOG_LEVEL=info
API_TIMEOUT=30000
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
